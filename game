class Item{
    String rarity = "";
    String[] rars = {"common", "uncommon", "rare", "epic", "legendary", "mythic"};
    public Item (String inRarity){
        Random r = new Random();
        rarity = rars[r.nextInt(4)];
    }   
    public String getRarity(){
        return rarity;
    }
    public void setBrandName(String inRarity){
        rarity = inRarity;
    }
}
class Weapon extends Item{
    int damage = 0;
    int accuracy = 0;
    public Weapon(String inRarity, int inDamage, int inAccuracy){
            super(inRarity);
            damage = inDamage;
            accuracy = inAccuracy;
                    }
    public int getDamage(){
        return damage;
    }
    public void setDamage(int inDamage){
        damage = inDamage;
    }
     public int getAccuracy(){
        return accuracy;
    }
    public void setAccuracy(int inAccuracy){
        accuracy = inAccuracy;
    }
    public toString
}

class Heal extends Item{
    int healing; 
    int shield;   
    public Heal(String inRarity, int inHealing, int inShield){
            super(inRarity);
            healing = inHealing;
            shield = inShield;
                    }
}
